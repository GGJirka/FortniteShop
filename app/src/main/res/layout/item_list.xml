<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_layout"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <ImageView android:layout_height="250sp"
        android:layout_width="270sp"
        android:id="@+id/item_img"
        android:layout_gravity="center"
        android:background="@color/transparentblack"/>
        <TextView
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="55sp"
            android:textColor="@color/transparentwhite"
            android:id="@+id/item_name"
            android:background="@color/transparentblacktext"
            android:textStyle="bold"
            tools:fontFamily="@string/common_google_play_services_enable_button" />
        <FrameLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:background="@color/transparentblacktext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/vbucks_icon"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/transparentwhite"
                android:id="@+id/item_price" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:id="@+id/daily_items"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:background="@color/mainBackground"/>
</LinearLayout>