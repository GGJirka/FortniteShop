<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fortnite_shop"
    android:layout_width="match_parent"
    android:background="@color/mainBackground"
    android:layout_height="match_parent"
    tools:context="shop.fortnite.ggjimmy.fortniteshop.FortniteShop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/shop_loading" />
    </RelativeLayout>

    <ListView
        android:layout_marginTop="10sp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/items"
        android:dividerHeight="0sp"
        android:divider="@color/mainBackground"
        android:layout_below="@+id/bar_layout"
        android:choiceMode="singleChoice" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/bar_layout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="ITEM SHOP"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:id="@+id/main_title"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textColor="@color/transparentwhite" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/to_skin"
                android:onClick="onSkinsClick"/>


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5090360471586053/7652355747">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
